@model IEnumerable<Product>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Цена</th>
            <th>Категория</th>
            <th>Бренд</th>
            <th>Дата добавления</th>
            <th>Изображение</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Category.Name</td>
                <td>@product.Brand.Name</td>
                <td>@product.CreatedAt</td>
                <td>
                    <img src="@product.ImagePath" alt="Изображение товара" style="width: 50px; height: auto;">
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
